<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/listview_root">

    <org.qii.weiciyuan.support.lib.PerformanceImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1px"
        android:background="@drawable/bg_border1"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="8dp"
        android:clickable="true" />

    <org.qii.weiciyuan.support.lib.TimeTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"

        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/username" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_toLeftOf="@id/time"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/avatar"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:textSize="15sp"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/avatar"
        android:layerType="software" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/repost_and_pic">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center">

            <org.qii.weiciyuan.support.lib.TimeLineImageView
                android:id="@+id/content_pic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/repost_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"

            >

            <TextView
                android:includeFontPadding="true"
                android:id="@+id/repost_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layerType="software" />

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <org.qii.weiciyuan.support.lib.TimeLineImageView
                    android:id="@+id/repost_content_pic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/repost_flag"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</RelativeLayout>