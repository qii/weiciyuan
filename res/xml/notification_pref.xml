<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <PreferenceCategory
        android:title="@string/new_message"
        >

        <CheckBoxPreference
            android:key="disable_fetch_at_night"
            android:title="@string/disable_notification_at_night"
            android:summary="@string/disable_notification_at_night_summary"
            android:defaultValue="true"/>
        <ListPreference
            android:key="frequency"
            android:title="@string/frequency"
            android:dialogTitle="@string/frequency"
            android:entries="@array/frequency"
            android:entryValues="@array/frequency_value"
            android:defaultValue="1"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/new_message_type"
        >
        <CheckBoxPreference
            android:key="mention_to_me"
            android:title="@string/mention_to_me"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="comment_to_me"
            android:title="@string/comment_to_me"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="mention_comment_to_me"
            android:title="@string/mention_comment_to_me"
            android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/notification_feedback"
        >
        <CheckBoxPreference
            android:key="vibrate"
            android:title="@string/vibrate"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="led"
            android:title="@string/led"
            android:defaultValue="false"/>

        <Preference
            android:title="@string/ringtone"
            android:key="ringtone">

        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/notification_style_version"
        >
        <ListPreference
            android:key="jbnotification"
            android:title="@string/notification_style"
            android:dialogTitle="@string/notification_style"
            android:entries="@array/notification_style"
            android:entryValues="@array/notification_style_value"
            android:defaultValue="1"/>
    </PreferenceCategory>

</PreferenceScreen>