<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <PreferenceCategory
        android:title="@string/pref_general_title"
        >
        <Preference
            android:key="pref_official_weibo_key"
            android:title="@string/pref_official_weibo_title"
            />

        <Preference
            android:key="pref_version_key"
            android:title="@string/pref_version_title"
            android:summary="1.0 alpha"
            />

        <Preference
            android:key="pref_author_key"
            android:title="@string/pref_author_title"
            android:summary="@string/pref_author_summary"
            />
        <Preference
            android:title="@string/pref_github_title"
            android:summary="github.com/qii/weiciyuan">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/qii/weiciyuan"/>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_support_title"
        >
        <Preference
            android:key="pref_donate_key"
            android:title="@string/pref_donate_title"
            android:summary="@string/pref_donate_summary"
            >

        </Preference>
        <Preference
            android:title="@string/pref_play_store_address_title"
            android:summary="@string/pref_play_store_address_summary"
            >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="market://details?id=org.qii.weiciyuan"/>
        </Preference>


        <Preference
            android:key="pref_suggest_key"
            android:title="@string/pref_suggest_title"
            >

        </Preference>

        <Preference
            android:key="pref_recommend_key"
            android:title="@string/pref_recommend_title"
            >

        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_thanks_title"
        >
        <Preference
            android:title="@string/pref_icon_design_title"
            android:summary="NovaDNG"
            >

        </Preference>
    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/pref_storage_title"
        >

        <Preference
            android:key="pref_cache_path_key"
            android:title="@string/pref_cache_path_title"
            >

        </Preference>

        <Preference
            android:key="pref_saved_pic_path_key"
            android:title="@string/pref_saved_pic_path_title"
            >

        </Preference>

    </PreferenceCategory>

</PreferenceScreen>